# Puppet Name: <%= @title %>
#
<%
shKey = scope['::splunk::params::shKey']
shRole = scope['::splunk::params::shRole']
ssl = scope['::splunk::params::TCPSSL']
-%>
[general]
pass4SymmKey = <%= shKey %>
serverName = <%= scope['::fqdn'] %>

<%
if ssl == true
  cipherSuite = scope['::splunk::params::cipherSuite']
  sslVersions = scope['::splunk::params::sslVersions']
end
-%>
<% if ssl == true -%>
[sslConfig]
sslVersions = <%= sslVersions %>
cipherSuite = <%= cipherSuite %>
<% end -%>

<%
if @shRole
-%>
[shclustering]
pass4SymmKey = <%= shKey %>
<% end -%>
