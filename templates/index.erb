# Puppet Name: <%= @title %>
#
<% if @size == 'none' -%>
# index <%= @title %> disabled
<% else -%>
[<%= @title -%>]
<%
if @title == 'main'
    dbName = 'defaultdb'
else
    dbName = @title
end
if @warmpath
  if @size == 'small'
    maxDataSize = 'auto'
    homePath = 'volume:splunk_warm_small'
  else
    maxDataSize = 'auto_high_volume'
    homePath = 'volume:splunk_warm_large'
  end
else
  homePath = '$SPLUNK_DB'
end
if @coldpath
  if @size == 'small'
    coldPath = 'volume:splunk_cold_small'
  else
    coldPath = 'volume:splunk_cold_large'
  end
else
  coldPath = '$SPLUNK_DB'
end
-%>
maxDataSize = <%= maxDataSize %>
homePath = <%= homePath -%>/<%= dbName -%>/db
coldPath = <%= coldPath -%>/<%= dbName -%>/colddb
thawedPath = $SPLUNK_DB/<%= dbName -%>/thaweddb
frozenTimePeriodInSecs = <%= @frozenTime %>
<% end -%>
