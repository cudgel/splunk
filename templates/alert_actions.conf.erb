<%
hostname = scope['::splunk::serviceurl']
mailfrom = scope['::splunk::mailfrom']
from = scope['::fqdn']
-%>
[email]
inline = 1
mailserver = localhost
<% if hostname != nil -%>
hostname = <%= hostname %>
<% else -%>
hostname = <%= from %>
<% end -%>
<% if mailfrom != nil -%>
from = <%= mailfrom %>
<% else %>
from = splunk@<%= from %>
<% end -%>
footer.text = If you believe you've received this email in error, please contact <%= scope['::splunk::email'] -%>.\
\
splunk > the engine for machine data
