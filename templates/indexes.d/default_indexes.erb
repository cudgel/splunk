<%
warm_path = scope['::splunk::warm_path']
cold_path = scope['::splunk::cold_path']
datamodel_path = scope['::splunk::datamodel_path']
maxwarm = scope['::splunk::maxwarm']
maxcold = scope['::splunk::maxcold']
remote_path = scope['::splunk::remote_path']
-%>
[default]
<% if remote_path != nil -%>
remotePath = volume:splunk_remote/$_index_name
<% end -%>

[volume:splunk_warm]
path = <%= warm_path %>
<% if maxwarm.to_i > 0 -%>
maxVolumeDataSizeMB = <%= maxwarm %>
<% end -%>

[volume:splunk_cold]
path = <%= cold_path %>
<% if maxcold.to_i > 0 -%>
maxVolumeDataSizeMB = <%= maxcold %>
<% end %>

[volume:splunk_datamodels]
path = <%= datamodel_path %>
