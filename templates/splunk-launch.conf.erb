# Puppet Name: <%= @title %>
#
<%
selinux = scope['::selinux']
SPLUNK_DB = scope['::splunk::splunkdb']
SPLUNK_HOME = scope['::splunk::splunkdir']
SPLUNK_OS_USER = scope['::splunk::splunk_user']
SPLUNK_SERVER_NAME = scope['::splunk::type']
-%>
# Modify the following line to suit the location of your Splunk install.
# If unset, Splunk will use the parent of the directory this configuration
# file was found in
#
SPLUNK_HOME=<%= SPLUNK_HOME %>

#
# By default, Splunk stores its indexes under SPLUNK_HOME in the
# var/lib/splunk subdirectory.  This can be overridden
# here:
#
SPLUNK_DB=<%= SPLUNK_DB %>
<% if selinux == true %>
SPLUNK_IGNORE_SELINUX = 1
<% end %>

# Splunkd daemon name
SPLUNK_SERVER_NAME=<%= SPLUNK_SERVER_NAME %>

# Splunkweb daemon name
SPLUNK_WEB_NAME=splunkweb

SPLUNK_OS_USER=<%= SPLUNK_OS_USER %>
