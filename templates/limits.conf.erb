# Puppet Name: <%= @title %>
#
<%
maxinfocsv = scope['::splunk::params::search_maxinfocsv']
maxout = scope['::splunk::params::subsearch_maxout']
maxtime = scope['::splunk::params::subsearch_maxtime']
ttl = scope['::splunk::params::subsearch_ttl']
dispatch_dir_warning_size = scope['::splunk::params::dispatch_size']
max_searches = scope['::splunk::params::max_searches']
max_queue = scope['::splunk::params::search_maxqueue']
max_rawsize = scope['::splunk::params::max_rawsize_perchunk']
-%>
[search_info]
max_infocsv_messages  = <%= maxinfocsv %>
infocsv_log_level = WARN

[subsearch]
<% if maxout != nil -%>maxout = <%= maxout %><% end %>
<% if maxtime != nil -%>maxtime = <%= maxtime %><% end %>
<% if ttl != nil -%>ttl = <%= ttl %><% end %>

[search]
<% if dispatch_dir_warning_size != nil -%>
dispatch_dir_warning_size = <%= dispatch_dir_warning_size %>
<% end -%>
max_searches_per_cpu = <%= max_searches %>
result_queue_max_size = <%= max_queue %>
max_rawsize_perchunk = <%= max_rawsize %>

[join]
<% if maxtime != nil -%>subsearch_maxtime = <%= maxtime %><% end %>
