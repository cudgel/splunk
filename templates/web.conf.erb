# Puppet Name: <%= @title %>
#
<%
dir = scope['::splunk::dir']
enablesplunkwebssl = scope['::splunk::webssl']
privkey = scope['::splunk::privkey']
webcert = scope['::splunk::webcert']
ciphersuite = scope['::splunk::ciphersuite']
ecdhcurves = scope['::splunk::ecdhcurves']
sslversions = scope['::splunk::sslversions']
sslnegotiation = scope['::splunk::sslnegotiation']
-%>
[settings]
enableSplunkWebSSL = <%= enablesplunkwebssl %>
allowSslRenegotiation = <%= sslnegotiation %>
privKeyPath = etc/auth/splunkweb/<%= privkey %>
serverCert = etc/auth/splunkweb/<%= webcert %>
cipherSuite = <%= ciphersuite %>
<% if ecdhcurves != nil -%>
ecdhCurves = <%= ecdhcurves %>
<% end -%>
sslVersions = <%= sslversions %>
